# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org
# github.com/Internet4000/editorconfig

[*]
charset = utf-8
insert_final_newline = true
end_of_line = lf
indent_style = tab
indent_size = tab
max_line_length = 120
tab_width = 2
trim_trailing_whitespace = true

[*.{diff,md}]
trim_trailing_whitespace = false

[{package.json,*.yml}]
indent_style = space
indent_size = 2
